<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角 -->
    <corners android:radius="12dp" />

    <!-- 渐变色配置 -->
    <gradient
        android:type="linear"
        android:startColor="#FABFB5"
        android:endColor="#F19294"
        android:angle="135"
    />

    <!-- 可选：添加轻微内边距让气泡效果更好 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>