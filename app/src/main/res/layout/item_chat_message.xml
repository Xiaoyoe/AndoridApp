<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- AI 消息区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_message_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/bg_ai_chat_bubble"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_time_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:paddingStart="12dp"/>

        <TextView
            android:id="@+id/tv_thinking_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="思考中..."
            android:textSize="14sp"
            android:background="@drawable/bg_ai_chat_bubble"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:paddingStart="12dp"/>
    </LinearLayout>

    <!-- 用户消息区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_message_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/bg_user_chat_bubble"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_time_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone"
            android:paddingEnd="12dp"
            android:gravity="end"/>
    </LinearLayout>
</RelativeLayout>